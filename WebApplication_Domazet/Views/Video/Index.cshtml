@model IEnumerable<WebApplication_Domazet.Models.Video>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="AddOrEdit">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VideoNaziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ukupno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zauzeto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slobodno)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VideoNaziv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ukupno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zauzeto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Slobodno)
                </td>
                <td>
                    <a asp-action="AddOrEdit" asp-route-id="@item.VideoSifra">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.VideoSifra">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
